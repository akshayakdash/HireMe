<!-- HEADER -->
<style>
    #footer-container {
        display: none;
    }

    .background {
        background: #008ad2 url(/assets/images/reg-bg.jpg) no-repeat center center;
        background-size: cover;
        height: 100%;
        width: 100%;
        top: 0;
        position: fixed;
    }
    #mySidenav {
        display: none;
    }
    #header {
        display: none;
    }
    .reg-btn-secondary {
        color: #dc3545;
        background-color: #ffffff;
        border-color: #6c757d;
    }
        .reg-btn-secondary:hover {
            color: #dc3545;
            background-color: #ffffff;
            border-color: #ffffff;
        }
    .reg-btn {
        position: relative;
        z-index: 1;
        padding: 0;
        margin-right: 20px;
        margin-bottom: 20px;
        border: none;
        border-radius: 30px;
        font: 700 12px/24px "Raleway", sans-serif;
        letter-spacing: 1.2px;
        /* text-transform: uppercase; */
        cursor: pointer;
        -webkit-transform: translateZ(0);
        -ms-transform: translateZ(0);
        transform: translateZ(0);
        -webkit-transition: all 0.2s;
        transition: all 0.2s;
    }

    .reg-btn-secondary:not(:disabled):not(.disabled).active, .reg-btn-secondary:not(:disabled):not(.disabled):active, .show > .reg-btn-secondary.dropdown-toggle {
        color: #dc3545;
        background-color: #ffffff;
        border-color: #ffffff;
    }
    .reg-btn-secondary:not(:disabled):not(.disabled).active:focus, .reg-btn-secondary:not(:disabled):not(.disabled):active:focus, .show > .reg-btn-secondary.dropdown-toggle:focus {
        box-shadow: NONE;
    }
</style>


<!-- PAGE CONTENT -->

@using HireMe.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}
<div class="background"></div>
<!--NEW CODE-->
<div class="mobile-view">
    <div class="form-box wow zoomInUp">
        <div class="row">
            <div class="col-md-12">
                <div class="home">
                    <a href="/" class="">
                        <span>
                            <i class="bizhub-icon-home"></i>
                        </span>
                        @*<i class="fa fa-home"></i>&nbsp;Home*@
                    </a>
                </div>
                <div class="headline text-center">
                    <div class="form-logo">
                        <img src="~/assets/images/logo.png" alt="JOBtek" />
                    </div>
                    <h2>CONNEXION</h2>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div><!-- headline -->
            </div>
        </div><!-- row -->
        <div class="row">
            <div class="col-md-12 regd-form formreg">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login-form", role = "form", name = "loginForm" }))
            {
                    @Html.AntiForgeryToken()
                    <fieldset>
                        <div class="form-section">

                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><img src="~/assets/images/user.png" alt=""></span>
                                </div>
                                @*<input type="text" class="form-control">
                                    <span class="input-lable">E-mail address</span>*@
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "User Name", @name = "userName",  @required="true"  })
                                <span class="input-lable">Nom d'utilisateur</span>

                                @*@Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })*@
                            </div>
                            <div class="row">
                                <div class="col-sm-12 error-arrow">
                                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger  " })
                                </div>
                            </div>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><img src="~/assets/images/password.png" alt=""></span>
                                </div>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", @name = "password",  @required = "true" })
                                <span class="input-lable">Mot de passe</span>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 error-arrow">
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger  " })
                                </div>
                            </div>
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    Souviens-toi de moi
                                    <span></span>
                                </label>
                            </div>
                            <div class="col-md-12 text-center">
                                <button type="submit" class="btn btn-style-1 btn-lg waves">CONNEXION<i class="decode-icon-cursor"></i></button>
                            </div>
                            <span>
                                @*@Html.ActionLink("Don't have an account?", "Register")*@
                                <div class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle reg-btn reg-btn-secondary" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        N'avez pas de compte?
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item" href="/Home/CandidatInfo?Length=4">CANDIDATE</a>
                                        <a class="dropdown-item" href="/Home/EmployerInfo?Length=4">EMPLOYER</a>
                                        <a class="dropdown-item" href="/Home/AgencyInfo?Length=4">AGENCY</a>
                                    </div>
                                </div>
                            </span>
                            <span style="float:right;"><a href="/Account/ForgotPassword">Mot de passe oublié?</a></span>
                        </div>
                    </fieldset>
            }
            </div>
        </div>
    </div>
</div>
<!--/NEW CODE-->


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
