<!-- HEADER -->
<style>
    #footer-container {
        display: none;
    }

    .background {
        background: #008ad2 url(/assets/images/reg-bg.jpg) no-repeat center center;
        background-size: cover;
        height: 100%;
        width: 100%;
        top: 0;
        position: fixed;
    }
</style>

<!-- PAGE CONTENT -->

@using HireMe.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}
<div class="background"></div>
<!--NEW CODE-->
<div class="form-box">
    <div class="row">
        <div class="col-md-12">
            <div class="headline text-center">
                <div class="form-logo">
                    <img src="~/assets/images/logo.png" alt="JOBtek" />
                </div>
                <h2>Login</h2>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div><!-- headline -->
        </div>
    </div><!-- row -->
    <div class="row">
        <div class="col-md-12 regd-form formreg">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login-form", role = "form", name = "login" }))
            {
                @Html.AntiForgeryToken()
                <fieldset>
                    <div class="form-section">

                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><img src="~/assets/images/email.png" alt=""></span>
                            </div>
                            @*<input type="text" class="form-control">
                            <span class="input-lable">E-mail address</span>*@
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "email", @placeholder = "E-mail address" })
                            <span class="input-lable">E-mail address</span>
                            @*@Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })*@
                        </div>

                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><img src="~/assets/images/password.png" alt=""></span>
                            </div>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                            <span class="input-lable">Password</span>
                        </div>

                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(m => m.RememberMe)
                                Remember me
                                <span></span>
                            </label>
                        </div>
                        <div class="col-md-12 text-center">
                            <button type="submit" class="btn btn-style-1 btn-lg waves">Log in <i class="decode-icon-cursor"></i></button>
                        </div>
                        <div class="col-md-12 text-center">
                            @Html.ActionLink("Don't have an account?", "Register")<br class="d-block d-sm-none">
                            <a href="#">Forgotten password?</a>
                        </div>
                    </div>
                </fieldset>
            }
        </div>
    </div>
</div>
<!--/NEW CODE-->




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
