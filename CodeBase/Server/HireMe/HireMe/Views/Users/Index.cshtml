<style>
    .chart-container {
        position: relative;
        height: 80vh;
        width: 80vw;
    }
</style>
<div id="main-container-user">
    @{  var roles = ((System.Security.Claims.ClaimsIdentity)User.Identity).Claims
                                                    .Where(c => c.Type == System.Security.Claims.ClaimTypes.Role)
                                                    .Select(c => c.Value);
        string role = roles.FirstOrDefault();}


    <section class="right-side">
        @if (role != "Admin")
        {

            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="headline text-center mb-1 wow fadeInDown" style="visibility: visible; animation-name: fadeInDown;">
                            <h2>Dashboard</h2>
                        </div>
                    </div>

                    <div class="col-md-6 wow fadeInLeft">
                        <div class="image-box style-2 text-left">
                            <div class="image-box-thumbnail">
                                <a href="#"><img src="~/assets/images/tuto-image.jpg" alt=""></a>
                            </div><!-- image-box-thumbnail -->
                            <h4><a href="#">All the Tuto in Video</a></h4>
                            <ul class="video-list">
                                <li>The saga of AYA</li>
                                <li><a href="https://youtu.be/eyT6BpafTQM" target="_blank">How JOBTEK came to Aya life?</a></li>
                                <li><a href="https://youtu.be/uDOn5mzOYcc" target="_blank">How Aya daily use JOBTEK?</a></li>

                                <li><a href="#">How to search a profile?</a></li>
                                <li><a href="#">How to manage favorite?</a></li>
                                <li><a href="#">How to give a Note & Recommandation?</a></li>
                                <li><a href="#">How to publish a Job offer/ Job request?</a></li>
                            </ul>
                        </div><!-- text-box -->
                    </div>

                    <div class="col-md-6 wow fadeInRight">
                        <div class="image-box style-2 text-left" style="min-height:695px;">
                            <div class="image-box-thumbnail">
                                <a href="#"><img src="~/assets/images/rules1.jpg" alt=""></a>
                            </div><!-- image-box-thumbnail -->
                            <h4><a href="#">What are the rules follow in our communauty?</a></h4>
                            <strong>Respect each other:</strong>
                            <ul class="bullet-list">
                                <li>Once you find a profile and you want to contact him, please be polite, no racism terms, and don’t insist if the user is not interested</li>
                            </ul>
                            <strong>Give note & recommendations:</strong>
                            <ul class="bullet-list">
                                <li>After hiring a profile, don’t forget to let a note & comment to ...</li>
                            </ul>
                        </div><!-- text-box -->
                    </div>

                    <div class="col-md-6 wow fadeInLeft">
                        <div class="image-box style-2 text-left">
                            <div class="image-box-thumbnail">
                                <a href="#"><img src="~/assets/images/search-profile.jpg" alt=""></a>
                            </div><!-- image-box-thumbnail -->
                            <h4><a href="#">How to search a profil?</a></h4>
                            <strong>Define your search criterias:</strong>
                            <ul class="bullet-list">
                                <li>Go to the section « Search a Job request/Job offer »</li>
                                <li>Define your search criterias from the panoply of customized criterias</li>
                                <li>Launch the search command</li>
                            </ul>
                            <strong>Check the profile details:</strong>
                            <ul class="bullet-list">
                                <li>Check all the profil detail (profile picture, age,  localisation,ID checked logo…)</li>
                            </ul>
                        </div><!-- text-box -->
                    </div>

                    <div class="col-md-6 wow fadeInRight">
                        <div class="image-box style-2 text-left">
                            <div class="image-box-thumbnail">
                                <a href="#"><img src="~/assets/images/publish.jpg" alt=""></a>
                            </div><!-- image-box-thumbnail -->
                            <h4><a href="#">How to publish a Job offer or a Job request?</a></h4>
                            <strong>From your user account:</strong>
                            <ul class="bullet-list">
                                <li>Go to the section « Publish a job offer » or « Job request »</li>
                                <li>Fill a short form to define your profile criterias & expectations</li>
                                <li>Submit the form</li>
                            </ul>
                            <strong>Admin validation:</strong>
                            <ul class="bullet-list">
                                <li>Once the form is submitted, an admin will check you form (text & pictures) and validate it to make it visible by the othter members</li>
                            </ul>
                        </div><!-- text-box -->
                    </div>

                </div>
            </div>
        }
        else
        {

            <div class="full-section-container" ng-app="admindashboard" ng-controller="kpiCtrl">
                <div class="jobsearch-section">
                    <div class="left-section">
                        <div class="filter-overlay">
                            <div class="lds-ripple"><div></div><div></div></div>
                        </div>
                        <div class="header">
                            <i class="fa fa-align-left"></i>

                            <span class="grid-title">Graphs</span>
                            <span><i id="progress1" class="fa fa-spinner fa-spin" style="font-size:24px;" ng-show="loading"></i></span>
                            @*<div class='switch' style="right:10px;">
                                    <div class='quality'>
                                        <input checked id='q1' name='q' type='radio' value='q1'>
                                        <label for='q1'>Job Request</label>
                                    </div><div class='quality'>
                                        <input id='q2' name='q' type='radio' value='q2'>
                                        <label for='q2'>Job Offer</label>
                                    </div>
                                </div>*@

                            <div class='switch' style="right:10px;">
                                <div class='quality'>
                                    <input id="job_type_request" checked name='JobType' type='radio' ng-value="1" data-ng-model="jobType" data-ng-change="getJobRequests()">
                                    <label for="job_type_request">Job Request</label>
                                </div><div class='quality'>
                                    <input id="job_type_offer" name='JobType' type='radio' ng-value="2" data-ng-model="jobType" data-ng-change="getJobOffers()">
                                    <label for="job_type_offer">Job Offer</label>
                                </div>
                            </div>
                        </div>
                        @*<a title="Filter" class="Filterjob" id="FilterjobId"><i class="fa fa-filter"></i></a>*@
                        <div class="body">
                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-2">
                                        <form class="form-inline">
                                            <div class="form-group">
                                                <label class="label" for="email">Select Year:</label>
                                                <select class="form-control">
                                                    <option selected>2018</option>
                                                </select>
                                            </div>

                                        </form>
                                    </div>

                                    

                                </div>
                                <div class="row">
                                    <section id="reactive">

                                        <div class="row mb-5">
                                            <div class="col-lg-12 col-sm-12">
                                                <div class="chart-container">
                                                    <canvas id="tables" class="chart chart-line ng-isolate-scope" chart-data="line_chart_data" chart-series="line_chart_series" chart-options="line_chart_options" chart-labels="line_chart_labels" chart-colors="line_chart_colors"></canvas>
                                                </div>
                                            </div>

                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12" id="doughnut-chart">
                                                <div class="panel panel-default">
                                                    <div class="chart-container">
                                                        <canvas id="doughnut" class="chart chart-doughnut chart-xs ng-isolate-scope" chart-data="doughnut_data" chart-series="doughnut_series" chart-options="doughnut_options" chart-labels="doughnut_labels"></canvas>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </section>
                                </div>

                            </div>
                        </div>

                        <script type="text/javascript" src="~/Scripts/ChartJs/Chart.min.js"></script>
                        <script type="text/javascript" src="~/Scripts/angular.min.js"></script>
                        <script type="text/javascript" src="~/Scripts/ChartJs/angular-chart.js"></script>
                        <script type="text/javascript" src="~/Scripts/ChartJs/app.js"></script>


                    </div>
                </div>
            </div>

        }
    </section>
</div>
<script>
    function openNav() {
        document.getElementById("mySidenav").style.width = "280px";
        document.getElementById("main-container-user").style.marginLeft = "280px";
    }

    function closeNav() {
        document.getElementById("mySidenav").style.width = "0";
        document.getElementById("main-container-user").style.marginLeft = "0";
    }
</script>
