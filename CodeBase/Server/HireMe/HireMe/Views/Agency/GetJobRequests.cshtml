@model IEnumerable<HireMe.Models.JobRequest>

@{
    ViewBag.Title = "Index";
}


<div id="main-container">
    
    @{  var roles = ((System.Security.Claims.ClaimsIdentity)User.Identity).Claims
                                                                .Where(c => c.Type == System.Security.Claims.ClaimTypes.Role)
                                                                .Select(c => c.Value);
