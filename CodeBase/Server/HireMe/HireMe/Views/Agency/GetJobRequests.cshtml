@model IEnumerable<HireMe.Models.JobRequest>

@{
    ViewBag.Title = "Index";
}


<div id="main-container">
    <header id="header">

        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-2">

                    <!-- LOGO -->
                    <div id="logo">
                        <a href="index.html">
                            <img src="~/assets/images/logo.png" alt="">
                        </a>
                    </div><!-- LOGO -->

                </div><!-- col -->
                <div class="col-sm-10">

                    <!-- MENU -->
                    <nav>

                        <a class="mobile-menu-button" href="#"><i class="bizhub-icon-menu-5"></i></a>

                        <ul class="menu clearfix" id="menu">
                            @*
                                <li class="active"><a href="index.html">HOME</a></li>*@
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>

                            @if (HttpContext.Current.User.Identity.IsAuthenticated)
                            {
                                <li>@Html.ActionLink("Users", "Index", "Users")</li>
                            }

                            @*
                                <li><a href="#">ADMIN</a></li>
                                <li><a href="#">LOGIN</a></li>*@
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            <li class="dropdown">
                                <a href="#">AIDE</a>
                                <ul>
                                    <li>
                                        <a class="waves" href="about-us.html">REPORT A BUG</a>
                                    </li>
                                    <li>
                                        <a class="waves" href="services.html">SHARE YOUR OPINION</a>
                                    </li>
                                </ul>
                            </li>

                            @Html.Partial("_LoginPartial")
                            <li class="secondary-menu-btn">
                                <a href="#"><i class="bizhub-icon-menu-bars"></i></a>
                                <ul class="secondary-menu">
                                    <li><a class="waves" href="index.html">Home</a></li>
                                    <li><a class="waves" href="#">ADMIN</a></li>
                                    <li><a class="waves" href="#">LOGIN</a></li>
                                    <li><a class="waves" href="#">CONTACT</a></li>
                                    <li><a class="waves" href="#">AIDE</a></li>
                                </ul>
                            </li>
                        </ul>

                    </nav>

                </div><!-- col -->
            </div><!-- row -->
        </div><!-- container-fluid -->

    </header>

    <div class="container">
        <div id="mySidenav" class="sidenav">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
            @{  var roles = ((System.Security.Claims.ClaimsIdentity)User.Identity).Claims
                                                        .Where(c => c.Type == System.Security.Claims.ClaimTypes.Role)
                                                        .Select(c => c.Value);
                string role = roles.FirstOrDefault();}

            @if (role == "Candidate")
            {
                <h2>Candidate Account</h2>
                <a href="~/JobCategories" style="line-height: 40px;"><img src="~/assets/images/search-profile.png" alt=""> Search Employer</a>

                <a href="~/JobRequests" style="line-height: 40px;"><img src="~/assets/images/manage-favorites.png" alt=""> My Job Requests</a>

                <a href="#" style="line-height: 40px;"><img src="~/assets/images/manage-favorites.png" alt=""> Manage my favorites</a>
            }
            else if (role == "Employer")
            {
                <h2>Employerr Account</h2>
                <a href="~/JobCategories" style="line-height: 40px;"><img src="~/assets/images/search-profile.png" alt=""> Search Employee</a>

                <a href="#" style="line-height: 40px;"><img src="~/assets/images/manage-favorites.png" alt=""> My Job Requests</a>

                <a href="#" style="line-height: 40px;"><img src="~/assets/images/manage-favorites.png" alt=""> Manage my favorites</a>
            }
            else if (role == "Agency")
            {
                <h2>Agency Account</h2>
                <a href="~/JobCategories" style="line-height: 40px;"><img src="~/assets/images/search-profile.png" alt=""> Search Employer</a>

                <a href="~/JobCategories" style="line-height: 40px;"><img src="~/assets/images/search-profile.png" alt=""> Create a Job Request</a>

                <a href="~/Agency/GetJobRequests" style="line-height: 40px;"><img src="~/assets/images/manage-favorites.png" alt=""> My Job Requests</a>

                <a href="#" style="line-height: 40px;"><img src="~/assets/images/manage-favorites.png" alt=""> Manage my favorites</a>
            }


            @*<a href="#"><img src="~/assets/images/lifecycle.png" alt=""> Process recruiment lifecycle</a>
                <a href="#"><img src="~/assets/images/message.png" alt=""> Manage my message & notification</a>
                <a href="#"><img src="~/assets/images/post-message.png" alt=""> Post a new message on the conversation thread</a>
                <a href="#" style="line-height: 40px;"><img src="~/assets/images/settings.png" alt=""> Manage my settings</a>
                <a href="#"><img src="~/assets/images/feedback.png" alt=""> Share my feedbacks about the plate form</a>
                <a href="#" style="line-height: 40px;"><img src="~/assets/images/bug.png" alt=""> Rise an Bug/issue</a>*@
        </div>
        <!---- Tab Section -->
        <div class="container wow fadeInUp">
            <div class="row">
                <div class="col-md-12">
                    <div class="tabs style-2 mt-lg-5 pt-lg-5">

                        <ul class="nav nav-tabs">
                            <li><a class="active" href="#tab-1-1" data-toggle="tab"><img src="~/assets/images/home-icon.png" />Home Jobs</a></li>
                            <li><a href="#tab-1-2" data-toggle="tab"><img src="~/assets/images/settings-icon.png" />Troubleshooting</a></li>
                            <li><a href="#tab-1-3" data-toggle="tab"><img src="~/assets/images/course-icon.png" />Course</a></li>
                            <li><a href="#tab-1-4" data-toggle="tab"><img src="~/assets/images/salon-icon.png" />Hairstyle/ Care</a></li>
                            <li><a href="#tab-1-5" data-toggle="tab"><img src="~/assets/images/ceremony-icon.png" />Organization Ceremony</a></li>
                        </ul>

                        <div class="tab-content">
                            <div class="tab-pane fade show active" id="tab-1-1">
                                <div class="container">
                                    <div class="row">
                                        @if (Model != null && Model.Count() > 0)
                                        {
                                            foreach (var item in Model)
                                            {
                                                <div class="col-md-4 col-sm-6">
                                                    <div class="profileitems">
                                                        <div class="left">
                                                            <img src="~/assets/images/image-18.jpg" />
                                                            <div class="rating">
                                                                <a href="javascropt(0);"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star-o"></i><i class="fa fa-star-o"></i></a>
                                                            </div>
                                                            <div class="favorite">
                                                                <a href="javascropt(0);"><i class="fa fa-heart-o"></i></a>
                                                            </div>
                                                        </div>
                                                        <div class="right">
                                                            <h1>@(item.Candidate.Gender == HireMe.Models.Gender.Male ? "Man" : "Woman")<span>@(item.Candidate.StaffType == HireMe.Models.StaffType.Agency ? "(AGENCY)" : "(INDIVIDUAL)")</span></h1>
                                                            <h2 class="name">@item.Candidate.FirstName</h2>
                                                            <h2 class="name">@item.Job.JobName</h2>
                                                            <p class="location">@item.Candidate.Country</p>
                                                            <div class="published">Published: <span>@item.PublishedDate</span></div>
                                                        </div>
                                                        <div class="profile-footer">
                                                            @item.JobRequestDescription
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <div>No Job request found for this job.</div>
                                        }
                                    </div><!-- row -->
                                </div>
                            </div><!-- tab-pane -->

                            <div class="tab-pane fade" id="tab-1-2">
                                <div class="service-box style-9 icon-left">
                                    <span><i class="bizhub-icon-shuffle"></i></span>
                                    <div class="service-box-content">
                                        <h5><a href="single-service.html">Troubleshooting</a></h5>
                                        <p>Pellentesque sit amet tellus blandit. Etiam nec odio vestibulum est mattis efficitur vel ut magna.</p>
                                    </div><!-- service-box-content -->
                                </div><!-- service-box -->
                            </div><!-- tab-pane -->

                            <div class="tab-pane fade" id="tab-1-3">
                                <div class="service-box style-9 icon-left">
                                    <span><i class="bizhub-icon-shuffle"></i></span>
                                    <div class="service-box-content">
                                        <h5><a href="single-service.html">Course</a></h5>
                                        <p>Pellentesque sit amet tellus blandit. Etiam nec odio vestibulum est mattis efficitur vel ut magna.</p>
                                    </div><!-- service-box-content -->
                                </div><!-- service-box -->
                            </div><!-- tab-pane -->

                            <div class="tab-pane fade" id="tab-1-4">
                                <div class="service-box style-9 icon-left">
                                    <span><i class="bizhub-icon-shuffle"></i></span>
                                    <div class="service-box-content">
                                        <h5><a href="single-service.html">Hairstyle/ Care</a></h5>
                                        <p>Pellentesque sit amet tellus blandit. Etiam nec odio vestibulum est mattis efficitur vel ut magna.</p>
                                    </div><!-- service-box-content -->
