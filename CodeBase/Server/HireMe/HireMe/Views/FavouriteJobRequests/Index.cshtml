<script type="text/javascript">
    var jobRequestId = 0;
    var ratingValue = 0;
    $(document).ready(function () {
        $('#stars i').on('click', function () {
            var onStar = parseInt($(this).data('value'), 10); // The star currently selected
            var stars = $(this).parent().children('i');

            for (i = 0; i < stars.length; i++) {
                $(stars[i]).removeClass('selected');
            }

            for (i = 0; i < onStar; i++) {
                $(stars[i]).addClass('selected');
            }

            // JUST RESPONSE (Not needed)
            ratingValue = parseInt($('#stars i.selected').last().data('value'), 10);


        });
    })

    function deleteFavouriteJobRequest(jobRequestId) {
        var prompt = confirm("Are you sure ?")
        //alert(jobRequestId);
        if (prompt) {
            $.ajax
                ({
                    url: '/FavouriteJobRequests/Delete?id=' + jobRequestId,
                    //data: { "id": jobRequestId },
                    type: 'get',
                    success: function (result) {
                        //$('.modal-box').text(result).fadeIn(700, function () {
                        //    setTimeout(function () {
                        //        $('.modal-box').fadeOut();
                        //    }, 2000);
                        //});



                        alert("Job Request deleted from your favorite list.");
                        window.location.reload();
                    }
                });
        }

    }

    function setJobRequestId(jrId) {
        jobRequestId = jrId;
        $("#note-list").html("");
        // get the partial view for list of jobRequestNotes
        $.ajax
            ({
                url: '/JobRequests/GetJobRequestNotePartialView?jobRequestId=' + jobRequestId,
                //data: { "id": jobRequestId },
                type: 'get',
                success: function (result) {
                    console.log(result);
                    //$('.modal-box').text(result).fadeIn(700, function () {
                    //    setTimeout(function () {
                    //        $('.modal-box').fadeOut();
                    //    }, 2000);
                    //});

                    $("#note-list").html("");
                    $("#note-list").html(result);

                }
            });
    }

    function saveJobRequestNote() {

        var note = $("#jobRequestNote").val();
        var rating = ratingValue//$("#rating").val();
        console.log(rating);
        if (jobRequestId && note && rating) {
            $.ajax
                ({
                    url: '/JobRequests/SaveJobRequestNote',
                    data: { "JobRequestId": jobRequestId, "Note": note, "StarRating": rating },
                    type: 'post',
                    success: function (result) {
                        $("#jobRequestNote").val("");
                        $("#rating").val("");
                        $("#modalnote").modal("hide");
                        alert("Job Request note added successfully.");
                    }
                });
        } else {
            // give error message
            alert("Please fill up the fields");
        }
    }
</script>

